<h1>There are <%= pluralize(@events.size, 'Event') %> </h1>

Listing generated at <%= @t.strftime("%r")  %>

<% @events.each do |event| %>
  <article>
    <header>
      <h2><%= event.name %></h2>
    </header>
    <p>
      <%= truncate(event.description, length:35, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>When:</th>
        <td><%= event.starts_at.strftime("%A, %b %d at %I:%M %p") %></td>
      </tr>
      <tr>
        <th>Where:</th>
        <td><%= event.location %></td>
      </tr>
      <tr>
        <th>Price:</th>
        <td><strong><%= format_event_price(event).upcase%></strong></td>
      </tr>
    </table>
  </article>
  ================================
<% end %>

